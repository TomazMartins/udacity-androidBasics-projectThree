<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="br.com.udacity.androidbasics.tomazmartins.metalshow.activity.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="horizontal"
    style="@style/mainButtonsBlock">

    <Button
        style="@style/button"
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/stdMargin"
        android:layout_marginRight="@dimen/stdMargin"
        android:text="@string/submit_button"/>

    <TextView
        style="@style/textOnPrimary"
        android:id="@+id/btn_reset"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/stdMargin"
        android:layout_marginRight="@dimen/stdMargin"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="@string/reset_button"/>

</LinearLayout>