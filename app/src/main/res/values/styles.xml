<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>"
    </style>


    <style name="text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/textOnBackground</item>
    </style>


    <style name="textOnPrimary" parent="text">
        <item name="textColor">@color/textOnPrimary</item>
    </style>


    <style name="textOnSecondary" parent="text">
        <item name="textColor">@color/textOnSecondary</item>
    </style>


    <style name="title" parent="highlightText">
        <item name="textSize">@dimen/title</item>
    </style>


    <style name="titleOnPrimary" parent="title">
        <item name="textColor">@color/textOnPrimary</item>
    </style>


    <style name="titleOnSecondary" parent="title">
        <item name="textColor">@color/textOnSecondary</item>
    </style>


    <style name="subtitle" parent="text">
        <item name="textSize">@dimen/subtitle</item>
    </style>


    <style name="highlightText" parent="text">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="contentBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/mainEdgeMargin</item>
        <item name="android:layout_marginRight">@dimen/mainEdgeMargin</item>
    </style>


    <style name="questionBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">@dimen/stdMargin</item>
        <item name="android:layout_marginBottom">@dimen/stdMargin</item>

        <item name="android:padding">@dimen/stdPadding</item>
    </style>
</resources>
