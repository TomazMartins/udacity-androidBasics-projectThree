<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="android:windowSoftInputMode">adjustPan</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>"
    </style>


    <style name="stdText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/stdPadding</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/textOnBackground</item>
    </style>


    <style name="textOnPrimary" parent="stdText">
        <item name="android:textColor">@color/textOnPrimary</item>
    </style>


    <style name="textOnSecondary" parent="stdText">
        <item name="android:textColor">@color/textOnSecondary</item>
    </style>


    <style name="title" parent="highlightText">
        <item name="android:textSize">@dimen/title</item>
    </style>


    <style name="titleOnPrimary" parent="title">
        <item name="android:textColor">@color/textOnPrimary</item>
    </style>


    <style name="titleOnSecondary" parent="title">
        <item name="android:textColor">@color/textOnSecondary</item>
    </style>


    <style name="subtitle" parent="stdText">
        <item name="android:textSize">@dimen/subtitle</item>
    </style>


    <style name="highlightText" parent="stdText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_margin">@dimen/stdMargin</item>
        <item name="android:padding">@dimen/stdPadding</item>
    </style>

    <style name="scoreBlock" parent="block">
        <item name="android:layout_margin">@dimen/noMargin</item>
        <item name="android:padding">@dimen/noPadding</item>

        <item name="android:background">@color/primaryLight</item>
    </style>


    <style name="contentBlock" parent="block">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/noMargin</item>
        <item name="android:padding">@dimen/noPadding</item>

        <item name="android:background">@color/background</item>
    </style>


    <style name="questionBlock" parent="block">
        <item name="android:background">@color/backgroundDark</item>
    </style>


    <style name="mainButtonsBlock" parent="block">
        <item name="android:layout_margin">@dimen/noMargin</item>
        <item name="android:padding">@dimen/noPadding</item>

        <item name="android:background">@color/primaryLight</item>
    </style>


    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>

        <item name="android:layout_margin">@dimen/minMargin</item>
        <item name="android:background">@drawable/btn_color</item>
        <item name="android:textColor">@color/textOnSecondary</item>
    </style>
</resources>
